<link href="css/backgroundAnimation.css" rel="stylesheet">
    <div id="signUpBG">
        <div class="notification is-info is-light">
            <div class="level">
                <p class="has-text-dark level-right">Already have an account?</p>
            <a href="" class="button is-success has-text-dark is-small level-left">Log In</a>
            </div>  
        </div>

        <div class="column is-half is-offset-one-quarter has-background-info-light" style="opacity: 80%; margin-top: 50px;">
            <h1 class="title is-2 has-text-centered">Hobbity</h1>
        </div>

        <div class="container" id="background">

            <div class="column is-half is-offset-one-quarter has-background-info-light" style="opacity: 80%; margin-top: 20px;">

            <form action="/login.js" class="form">

                <div class="field">
                    <label for="" class="label">Username</label>
                    <div class="control has-icons-left has-icons-right">
                        <input class="input is-success" type="text" id="username" placeholder="Username" required>
                        <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                        </span>
                        <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                        </span>
                    </div>
                    <p class="help is-success">This username is available</p>
                </div>

                <div class="field">
                <label class="label">First Name</label>
                <p class="control has-icons-left">
                    <input class="input" type="text" id="fname" placeholder="First name" required>
                    <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                    </span>
                </p>
                </div>

            <div class="field">
                <label class="label">Last Name</label>
                <p class="control has-icons-left">
                <input class="input" type="text" id="lname" placeholder="Last Name" required>
                <span class="icon is-small is-left">
                    <i class="fas fa-lock"></i>
                </span>
                </p>
            </div>

                <div class="field">
                    <label class="label">Password</label>
                    <p class="control has-icons-left">
                    <input class="input" type="password" id="password" placeholder="Password" required>
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                    </p>
                </div>

                <div class="field">
                    <label class="label">Confirm Password</label>
                    <p class="control has-icons-left">
                    <input class="input" type="password" placeholder="Confirm Password" required>
                    <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                    </p>
                </div>

                <div class="field is-grouped">
                    <div class="control" style="padding-left: 70px;">
                    <button class="button is-success has-text-dark">Sign Up</button>
                    </div>
                    <div class="control" style="padding-left: 200px;">
                    <button class="button is-warning">Cancel</button>
                    </div>
                </div>

                </div>
                
            </form>    

    </div>
</div>